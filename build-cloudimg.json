{
  "variables": {
    "centos7_image": "",
    "centos8_image": ""
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://mirror.nsc.liu.se/CentOS/7/isos/x86_64/{{user `centos7_image`}}.iso",
      "iso_checksum_url": "http://mirror.centos.org/centos/7/isos/x86_64/sha256sum.txt",
      "iso_checksum_type": "sha256",
      "output_directory": "build",
      "communicator": "none",
      "shutdown_command": "",
      "shutdown_timeout": "20m",
      "disk_size": 5000,
      "format": "qcow2",
      "disk_compression": true,
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "name": "centos-7",
      "vm_name": "centos-7-latest",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-ext4.ks<enter><wait>"
      ],
      "qemuargs": [
        ["-m", "1024M"]
      ]
    },
    {
      "type": "qemu",
      "iso_url": "http://mirror.nsc.liu.se/CentOS/8-stream/isos/x86_64/C{{user `centos8_image`}}-boot.iso",
      "iso_checksum_url": "http://mirror.nsc.liu.se/CentOS/8-stream/isos/x86_64/CHECKSUM",
      "iso_checksum_type": "sha256",
      "output_directory": "build",
      "communicator": "none",
      "shutdown_command": "",
      "shutdown_timeout": "20m",
      "disk_size": 5000,
      "format": "qcow2",
      "disk_compression": true,
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "name": "centos-8",
      "vm_name": "centos-8-latest",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8-ext4.ks<enter><wait>"
      ],
      "qemuargs": [
        ["-m", "1024M"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
